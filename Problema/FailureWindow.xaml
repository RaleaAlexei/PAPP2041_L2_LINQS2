<Window x:Class="Problema.FailureWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Problema"
        mc:Ignorable="d"
        Title="FailureWindow" Height="450" Width="800">
    <Grid>
        <DataGrid ItemsSource="{Binding Failures}"
                  AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Name"
                                    Binding="{Binding Nume}" />
                <DataGridTextColumn Header="Number of Failures"
                                    Binding="{Binding NumberOfFailure}" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
